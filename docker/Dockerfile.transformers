# DeepSeek-OCR Python service using transformers (CPU-compatible)
# Optimized for CPU servers without GPU

FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip

# Install transformers and dependencies (without vLLM)
# Note: DeepSeek-OCR has many undocumented dependencies
RUN pip install --no-cache-dir \
    "transformers>=4.45.0" \
    "torch>=2.0.0" \
    "torchvision>=0.15.0" \
    "accelerate>=0.25.0" \
    "pillow>=10.0.0" \
    "fastapi>=0.104.0" \
    "uvicorn[standard]>=0.24.0" \
    "python-multipart>=0.0.6" \
    "addict>=2.4.0" \
    "easydict>=1.10" \
    "matplotlib>=3.7.0" \
    "einops>=0.7.0" \
    "timm>=0.9.0" \
    "sentencepiece>=0.1.99" \
    "opencv-python-headless>=4.8.0" \
    "numpy>=1.24.0" \
    "scipy>=1.10.0"

# Copy the transformers-based server
COPY server_transformers.py /app/server.py

# Health check endpoint
# Disabled temporarily to allow initial model loading (10-15 min)
# Re-enable after first successful deployment
# HEALTHCHECK --interval=30s --timeout=10s --start-period=180s --retries=5 \
#     CMD curl -f http://localhost:8000/health || exit 1

# Expose port
EXPOSE 8000

# Run the server
CMD ["python", "server.py"]
